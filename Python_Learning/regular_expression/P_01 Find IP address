#IP address from given input
#(1) IP =198.162.0.0
import re
data='198.162.0.0'
print(re.findall (r'\d{3}\.\d{3}\.\d\.\d', data))

#(2) IP = 198.162.0.0 , 198.162.12.0
data='198.162.0.0 198.162.12.0'
print(re.findall(r'\d{3}\.\d{3}\.\d{1,2}\.\d',data))

#(3) IP = 198.162.0.0 , 198.162.12.0 , 198.162.12.123
data='198.162.0.0 198.162.12.0 198.162.12.123'
print(re.findall(r'\d{3}\.\d{3}.\d{1,2}\.\d{1,3}',data))

#(4) IP = 198.162.0.0 , 198.162.12.0 , 198.162.12.123,192.162.123.240
data='198.162.0.0 198.162.12.0 198.162.12.123 192.162.123.24043424'
print(re.findall(r'\d{3}\.\d{3}\.\d{1,3}\.\d{1,3}',data))
#or
print(re.findall(r'\d+\.\d+\.\d+\.\d+',data))


